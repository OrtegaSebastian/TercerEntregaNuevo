<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <title>Ecommerce</title>
</head>

<body>
  <!-- BARRA NAVEGACIÓN -->
  <div class="container w-75 p-2 border mt-3">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <h2>Bienvenid@, {{nombre}} </h2>
      </div>
      <div>
        <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/productos'">
          Productos
        </button>
      </div>
      <div>
        <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/carrito'">
          Carrito
        </button>
      </div>
      <div>
        <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/cuenta'">
          Mi cuenta
        </button>
      </div>
      <div>
        <button class="btn btn-dark btn-lg" id="logout" onclick="location.href='/logout'">
          Desloguear
        </button>
      </div>
    </li>
  </div>

  <!-- PRODUCTOS BD -->

  <div class="container mt-3">
    <h3>Productos disponibles:</h3>
    <table class="table table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Código</th>
          <th>Precio</th>
          <th>Stock</th>
          <th>Imagen</th>
          <th>Agregar al carrito</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
        <tr>
          <td>{{this.nombre}}</td>
          <td>{{this.descripcion}}</td>
          <td>{{this.codigo}}</td>
          <td>{{this.precio}}</td>
          <td>{{this.stock}}</td>
          <td><img src="{{imgUrl}}" alt="Imagen del producto"></td>
          <td><button class="btn btn-success" method="POST" onclick="agregarProductoAlCarrito({{id}})">Agregar</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

 <!-- CARRITO -->
  <div class="container mt-3">
    <h3>Carrito:</h3>
    <table class="table table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each carrito}}
        <tr>
          <td>{{nombre}}</td>
          <td>{{cantidad}}</td>
          <td>{{total}}</td>
          <td><button class="btn btn-danger" onclick="eliminarDelCarrito({{id}})">Eliminar</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <h3>Total: {{totalCarrito}}</h3>
  </div>






<script src="../public/scripts/registro.js"></script>
<script src="../public/scripts/productos.js"></script>
<script src="../public/scripts/carrito.js"></script>

</body>

</html>